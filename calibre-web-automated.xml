<?xml version="1.0"?>
<Container version="2">
  <Name>calibre-web-automated</Name>
  <Repository>crocodilestick/calibre-web-automated:latest</Repository>
  <Registry>https://hub.docker.com/r/crocodilestick/calibre-web-automated</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://forums.unraid.net/topic/122788-support-jpdvm2014-templates/</Support>
  <Project>https://github.com/crocodilestick/Calibre-Web-Automator</Project>
  <Overview>A simple tool to give Calibre-Web the Auto-Import and Auto-Conversion Functionality. Fully automate and simplify your eBook set up.</Overview>
  <Category>MediaApp:Books MediaServer:Books</Category>
  <WebUI>http://[IP]:[PORT:8083]</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/JPDVM2014/icons/35eb799864f41502e741075abfc6457ba0edefd6/calibre-web-logo.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1721874354</DateInstalled>
  <DonateText>If you find this template useful, Iâ€™d love a coffee!</DonateText>
  <DonateLink>https://bmc.link/JPDVM2014</DonateLink>
  <Requires/>
  <Config Name="WebUI" Target="8083" Default="8083" Mode="tcp" Description="" Type="Port" Display="always" Required="true" Mask="false">8083</Config>
  <Config Name="Appdata" Target="/config" Default="/mnt/user/appdata/calibre-web-automated" Mode="rw" Description="" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/calibre-web-automated</Config>
  <Config Name="Import Folder" Target="/cwa-book-ingest" Default="" Mode="rw" Description="ATTENTION &#x26A0;&#xFE0F; - All files within this folder will be DELETED after being processed. This folder should only be used to dump new books into for import and automatic conversion" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/books/import/</Config>
  <Config Name="Calibre Library" Target="/calibre-library" Default="" Mode="rw" Description="This should be bound to the folder that your metadata.db file resides within." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/books/</Config>
  <Config Name="Timezone" Target="TZ" Default="UTC" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="false">UTC</Config>
  <Config Name="Docker Mods" Target="DOCKER_MODS" Default="" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="false">linuxserver/mods:universal-calibre</Config>
</Container>